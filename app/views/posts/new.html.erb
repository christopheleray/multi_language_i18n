<div class="container">
<h1><%= t('post.new_title')%></h1>
  <%= form_for([@user, @post]) do |f| %>
    <p><%= f.label :title %></p>
    <p><%= f.text_field(:title) %></p>
    <p><%= f.label :content %></p>
    <p><%= f.text_area(:content) %></p>
    <p><%= f.submit 'Valider', class: "btn btn-primary" %></p>
  <% end %>
</div>
